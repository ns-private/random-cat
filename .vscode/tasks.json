{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dev:debug",
      "type": "shell",
      "command": "NODE_OPTIONS='--inspect' npm run dev",
      "group": "build",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "source": "ts",
        "applyTo": "closedDocuments",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*Local:.*",
          "endsPattern": ".*Ready in.*"
        }
      }
    }
  ]
}
